.k_su_single-container
  %header.k_su_header
    %h1.k_su_header__title
      = link_to "#" do
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", alt: "mercari", width: "185", height: "49"}

  %main.k_su_wrapper7
    %section.k_su_section7
      .k_su_section7__header
        %p.k_su_section7__header--content
          アカウントをお持ちでない方はこちら
        .k_su_section7__header--btn
          新規会員登録
        
      .k_su_section7__inner
        .k_su_section7__inner--form 
          = link_to  "#", class: "k_su_section7__inner--form-facebook-regi" do
            = fa_icon 'facebook-square', class: "k_su_icon"
            Facebookで登録する
          = link_to  "#", class: "k_su_section7__inner--form-google-regi" do
            = fa_icon 'google', class: "k_su_icon"
            Googleで登録する          
        .k_su_section7__inner--form2
          %input{class: "k_su_section7__inner--form2-input", placeholder: "メールアドレス"}
          %input{class: "k_su_section7__inner--form2-input", placeholder: "パスワード"}
          %img{src: 'https://placehold.jp/300x74.png', class: 'k_su_section7__inner--form2-tag'}
          %input{type: 'submit', value: 'ログイン', class: 'k_su_section7__inner--form2-btn'}
          = link_to "パスワードお忘れの方", "#", class: 'k_su_section7__inner--form2-link'
            

  %footer.k_su_footer
    = render 'registration/users/footer'
  
  
  