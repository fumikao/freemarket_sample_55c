= render 'users/top_column'
.o_detail-container
  .o_detail-field
    .o_item
      %h1 
        = @item.name
      .o_item__main
        .o_item__main--image
          .o_image-main
            = image_tag @image.image.to_s, size: "300x300"
          .o_image-sub
            - @images.each do |image|
              = image_tag image.image.to_s, size: "60x60"
        %table.o_item__main--table
          %tbody
            %tr
              %th 
                出品者
              %td
                = link_to "ニックン", "#"
                .o_user-evaluations
                  .evaluation
                    = fa_icon 'smile-o', class: "o_smile"
                    %span 100
                  .evaluation
                    = fa_icon 'meh-o', class: "o_meh"
                    %span 50
                  .evaluation
                    = fa_icon 'frown-o', class: "o_frown"
                    %span 1
            %tr
              %th カテゴリー
              %td
                .td-category
                  = link_to "メンズ", "#"
                .td-category
                  = link_to "#" do
                    = fa_icon 'chevron-right'
                    アクセサリー
                .td-category
                  = link_to "#" do
                    = fa_icon 'chevron-right'
                    ネックレス
            %tr
              %th ブランド
              %td
                = link_to "ルイ ヴィトン", "#"
            %tr
              %th 商品の状態
              %td 新品、未使用
              -# = f.select :condtion, options_for_select(Item.conditions.keys)
            %tr
              %th 配送料の負担
              %td 送料込み(出品者負担)
              -# = f.select :shipping_fee, options_for_select(Item.shipping_fees.keys)
            %tr
              %th 配送の方法
              %td 普通郵便(定形、定形外)
            %tr
              %th 配送元地域
              %td
                = link_to "佐賀県", "#"
            %tr
              %th 発送日の目安
              %td 4~7日で発送
              -# = f.select :shipping_date, options_for_select(Item.shipping_dates.keys)
      .o_item__price
        %span.price-main
          ¥
          = @item.price
        %span.price-tax
          (税込)
        %span.price-fee
          送料込み
      .o_item__baloon
        .o_item__baloon-text
          売上金¥2,285円をお持ちです
      = link_to "購入画面に進む", new_item_purchase_path(@item.id), class: "o_item__buybtn"
      .o_item__description
        %p
          = @item.description
      .o_item__sub
