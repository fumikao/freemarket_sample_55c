.header
  .header-top
    %h1
      %a{href: "#"}
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3135490372", width: "150px"}
    %form
      %input{type: "text", placeholder: "何かお探しですか？"}
      %a{href: "#"}
        = fa_icon 'search', class: "o_icon-search"
  .header-bottom
    .header-bottom__left
      %ul
        %li
          %h2
            %a{href: "#"}
              = fa_icon 'list-ul', class: "o_icon-red"
              %span カテゴリーから探す
        %li
          %h2
            %a{href: "#"}
              = fa_icon 'tag', class: "o_icon-red"
              %span ブランドから探す
    .header-bottom__right
      %ul
        %li
          %a{href: "#"}
            = fa_icon 'heart', class: "o_icon-gray"
            %span いいね一覧
        %li
          %a{href: "#"}
            = fa_icon 'bell', class: "o_icon-gray"
            %span お知らせ
        %li
          %a{href: "#"}
            = fa_icon 'check', class: "o_icon-gray"
            %span やることリスト
        %li
          %a{href: "#"}
            .header-bottom__right--image 
              %img{src: "https://placehold.jp/30x30.png"}
            %span マイページ