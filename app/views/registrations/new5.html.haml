.k_su_single-container
  %header.k_su_header
    .k_su_header__inner
      %h1.k_su_header__inner--title
        = link_to root_path do
          %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", alt: "mercari", width: "185", height: "49"}

      .k_su_header__inner--pan
        .k_su_header__inner--pan-li
          会員情報
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after1.k_su_active-back
        .k_su_header__inner--pan-li
          電話番号認証
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after2.k_su_active-back
        .k_su_header__inner--pan-li
          お届け先住所入力
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after3.k_su_active-back
        .k_su_header__inner--pan-li.k_su_active 
          支払い方法
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after4
        .k_su_header__inner--pan-li
          完了
          .k_su_progress-status

  %main.k_su_wrapper
    %section.k_su_section5
      %h2.k_su_section5__header
        支払い方法

      = form_tag(url: create5_registrations_path, method: "POST", class: "k_charge-form") do
        .k_su_section5__inner
          .k_su_section5__inner--form
            .k_su_section5__inner--form-label
              カード番号
            .k_su_section5__inner--form-span
              必須
            %input{class: "k_su_section5__inner--form-input k_card-number", placeholder: "半角数字のみ"}
            
          .k_su_section5__inner--form2
            .k_su_section5__inner--form2-label
              %img{src: 'https://placehold.jp/300x37.png'}
            
          .k_su_section5__inner--form3
            .k_su_section5__inner--form3-label
              有効期限
            .k_su_section5__inner--form3-span
              必須
            .k_su_section5__inner--form3-input
              %input{class: "k_su_section5__inner--form3-input-child k_card-exp_month", placeholder: "12"}
              %p.k_su_section5__inner--form3-input-sentence 月
              %input{class: "k_su_section5__inner--form3-input-child k_card-exp_year", placeholder: "2020"}
              %p.k_su_section5__inner--form3-input-sentence 年
              
          .k_su_section5__inner--form4
            .k_su_section5__inner--form4-label
              セキュリティコード
            .k_su_section5__inner--form4-span
              必須
            %input{class: "k_su_section5__inner--form4-input k_card-cvc", placeholder: "カード背面4桁もしくは3桁の番号"}  
            .k_su_section5__inner--form4-sentence
              = link_to "#", class: 'k_su_section5__inner--form4-sentence-content' do
                = fa_icon 'question-circle'
                カード裏面の番号とは？
    
          .k_su_section5__inner--form5
            .k_su_section5__inner--form5-input
              %input{type: 'submit', value: '次へ進む', class: 'k_su_section5__inner--form5-input-btn'}
                
  %footer.k_su_footer
    = render 'footer'
  
  