.k_su_single-container
  %header.k_su_header
    .k_su_header__inner
      %h1.k_su_header__inner--title
        = link_to root_path do
          %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", alt: "mercari", width: "185", height: "49"}

      .k_su_header__inner--pan
        .k_su_header__inner--pan-li
          会員情報
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after1.k_su_active-back
        .k_su_header__inner--pan-li
          電話番号認証
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after2.k_su_active-back
        .k_su_header__inner--pan-li.k_su_active 
          お届け先住所入力
          .k_su_progress-status.k_su_active-back
            .k_su_progress-status-after3
        .k_su_header__inner--pan-li
          支払い方法
          .k_su_progress-status
            .k_su_progress-status-after4
        .k_su_header__inner--pan-li
          完了
          .k_su_progress-status

  %main.k_su_wrapper4
    %section.k_su_section4
      %h2.k_su_section4__header
        発送元・お届け先住所入力

      = form_for @user, url: create4_registrations_path do |f|  
        .k_su_section4__inner
          .k_su_section4__inner--form
            .k_su_section4__inner--form-label
              お名前
            .k_su_section4__inner--form-span
              必須
            = f.text_field :lastname, class: "k_su_section4__inner--form-input k_form", placeholder: "例）山田"
            = f.text_field :firstname, class: "k_su_section4__inner--form-input k_form", placeholder: "例）太郎"  
            .error_zone
              %p.error_message
                = @user.errors.full_messages_for(:lastname)[0]
              %p.error_message
                = @user.errors.full_messages_for(:firstname)[0]
              
          .k_su_section4__inner--form2
            .k_su_section4__inner--form2-label
              お名前カナ
            .k_su_section4__inner--form2-span
              必須
            = f.text_field :lastname_kana, class: "k_su_section4__inner--form2-input k_form", placeholder: "例）ヤマダ"
            = f.text_field :firstname_kana, class: "k_su_section4__inner--form2-input k_form", placeholder: "例）タロウ"
            .error_zone
              %p.error_message
                = @user.errors.full_messages_for(:lastname_kana)[0]
              %p.error_message
                = @user.errors.full_messages_for(:firstname_kana)[0]

          = f.fields_for :address do |i|
            .k_su_section4__inner--form3
              .k_su_section4__inner--form3-label
                郵便番号
              .k_su_section4__inner--form3-span
                必須
              = i.text_field :postal_code, class: "k_su_section4__inner--form3-input k_form", placeholder: "例）123-4567"
              .error_zone
                %p.error_message
                  = @address.errors.full_messages_for(:postal_code)[0]
              
            .k_su_section4__inner--form3
              .k_su_section4__inner--form3-label
                都道府県
              .k_su_section4__inner--form3-span
                必須
              = i.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: '---'}
              .error_zone
                %p.error_message
                  = @address.errors.full_messages_for(:prefecture_id)[0]
              
            .k_su_section4__inner--form3
              .k_su_section4__inner--form3-label
                市区町村
              .k_su_section4__inner--form3-span
                必須
              = i.text_field :city, class: "k_su_section4__inner--form3-input", placeholder: "例）横浜市緑区"
              .error_zone
                %p.error_message
                  = @address.errors.full_messages_for(:city)[0]
            
            .k_su_section4__inner--form3
              .k_su_section4__inner--form3-label
                番地
              .k_su_section4__inner--form3-span
                必須
              = i.text_field :address_number, class: "k_su_section4__inner--form3-input", placeholder: "例）青山1-1-1"
              .error_zone
                %p.error_message
                  = @address.errors.full_messages_for(:address_number)[0]
              
            .k_su_section4__inner--form4
              .k_su_section4__inner--form4-label
                建物名
              .k_su_section4__inner--form4-span
                任意
              = i.text_field :building_name, class: "k_su_section4__inner--form4-input", placeholder: "例）柳ビル103"
              
          .k_su_section4__inner--form4
            .k_su_section4__inner--form4-label
              電話
            .k_su_section4__inner--form4-span
              任意
            = f.text_field :tel, class: "k_su_section4__inner--form4-input", placeholder: "例）09012345678"
  
              
          .k_su_section4__inner--form5
            .k_su_section4__inner--form5-input
              = f.submit '次へ進む', class: 'k_su_section4__inner--form5-input-btn'

  %footer.k_su_footer
    = render 'footer'
  
  