.k_su_single-container
  %header.k_su_header
    %h1.k_su_header__title
      %a{href: "#"}
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", alt: "mercari", width: "185", height: "49"}

  %main.k_su_wrapper5
    %section.k_su_section5
      %h2.k_su_section5__header
        会員情報入力
      .k_su_section5__inner
        .k_su_section5__inner--form
          .k_su_section5__inner--form-label
            カード番号
          .k_su_section5__inner--form-span
            必須
          %input{class: "k_su_section5__inner--form-input", placeholder: "半角数字のみ"}  
          
        .k_su_section5__inner--form2
          .k_su_section5__inner--form2-label
            %img{src: 'https://placehold.jp/300x37.png'}
          
        .k_su_section5__inner--form3
          .k_su_section5__inner--form3-label
            有効期限
          .k_su_section5__inner--form3-span
            必須
          .k_su_section5__inner--form3-input
            %input{class: "k_su_section5__inner--form3-input-child", placeholder: "01"}
            %p.k_su_section5__inner--form3-input-sentence 月
            %input{class: "k_su_section5__inner--form3-input-child", placeholder: "19"}
            %p.k_su_section5__inner--form3-input-sentence 年
            
        .k_su_section5__inner--form4
          .k_su_section5__inner--form4-label
            セキュリティコード
          .k_su_section5__inner--form4-span
            必須
          %input{class: "k_su_section5__inner--form4-input", placeholder: "カード背面4桁もしくは3桁の番号"}  
          .k_su_section5__inner--form4-sentence
            %a{class: 'k_su_section5__inner--form4-sentence-content', href: '#'} 
              ★
              カード裏面の番号とは？
   
        .k_su_section5__inner--form5
          .k_su_section5__inner--form5-input
            %input{type: 'submit', value: '次へ進む', class: 'k_su_section5__inner--form5-input-btn'}
     
  %footer.k_su_footer
    .k_su_footer__inner
      %ul.k_su_footer__inner--nav
        %li.k_su_footer__inner--nav-li 
          %a{href: "#", class: "k_su_footer__inner--nav-li-a"} プライバシーポリシー
        %li.k_su_footer__inner--nav-li
          %a{href: "#", class: "k_su_footer__inner--nav-li-a"} メルカリ利用規約
        %li.k_su_footer__inner--nav-li
          %a{href: "#", class: "k_su_footer__inner--nav-li-a"} 特定商取引に関する表記
      %a{href: "#", class: "k_su_footer__inner--logo"}
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?891577966", alt: "freemarket", width: "80", height: "65"}
      %p.k_su_footer__inner--small ©️ 2019 Mercari
  
  