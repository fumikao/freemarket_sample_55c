.k_su_single-container
  %header.k_su_header
    %h1.k_su_header__title
      = link_to root_path do
        %img{src: "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?891577966", alt: "mercari", width: "185", height: "49"}

  %main.k_su_wrapper7
    %section.k_su_section7
      .k_su_section7__header
        %p.k_su_section7__header--content
          アカウントをお持ちでない方はこちら
        .k_su_section7__header--btn
          新規会員登録
        
      .k_su_section7__inner
        .k_su_section7__inner--form 
          = link_to  user_facebook_omniauth_authorize_path, method: :post, class: "k_su_section7__inner--form-facebook-regi" do
            = fa_icon 'facebook-square', class: "k_su_icon"
            Facebookでログイン
          = link_to  user_google_oauth2_omniauth_authorize_path, method: :post, class: "k_su_section7__inner--form-google-regi" do
            = fa_icon 'google', class: "k_su_icon"
            Googleでログイン      
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|    
          .k_su_section7__inner--form2
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "k_su_section7__inner--form2-input"
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "k_su_section7__inner--form2-input"
            %img{src: 'https://placehold.jp/300x74.png', class: 'k_su_section7__inner--form2-tag'}
            = f.submit 'ログイン', class: 'k_su_section7__inner--form2-btn'
            = link_to "パスワードお忘れの方", "#", class: 'k_su_section7__inner--form2-link'

  %footer.k_su_footer
    = render 'registrations/footer'
  